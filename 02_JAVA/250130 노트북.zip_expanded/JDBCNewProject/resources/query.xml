	</entry>
<entry key="insertMember">
		INSERT INTO MEMBER VALUES(SEQ_USERNO.NEXTVAL,?,?,?,?,?,?,?)
	</entry>
<entry key="selectMember">
		SELECT * FROM MEMBER WHERE USERID = ?
	</entry>
<entry key="updateMember">
		UPDATE MEMBER SET USERPWD =?,
